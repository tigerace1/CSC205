<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chengen.converter.Converter64"
    android:background="#fe6889">
    <EditText
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:id="@+id/etInDecimal"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_above="@+id/btnDTB2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:editable="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Decimal To Binary"
        android:id="@+id/btnDTB2"
        android:textColor="#FFF"
        android:background="#ea1031"
        android:clickable="true"
        android:textSize="32dp"
        android:layout_above="@+id/tvOutput2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:layout_alignEnd="@+id/tvOutput2" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Binary To Decimal"
        android:id="@+id/btnBTD2"
        android:textColor="#FFF"
        android:background="#ea1031"
        android:clickable="true"
        android:textSize="32dp"
        android:layout_below="@+id/etMantissa"
        android:layout_alignEnd="@+id/etInDecimal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvOutput2"
        android:textSize="20dp"
        android:textColor="#1628eb"
        android:background="#FFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decimal:"
        android:id="@+id/textView"
        android:textColor="#FFFF"
        android:textSize="26dp"
        android:layout_above="@+id/etInDecimal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign:"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="26dp"
        android:textColor="#FFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exponent:"
        android:id="@+id/textView7"
        android:textSize="26dp"
        android:textColor="#FFFF"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etExpo" />

    <EditText
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/etSign"
        android:textColor="#000000"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView6"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:editable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/etExpo"
        android:textColor="#000000"
        android:layout_below="@+id/imageButton"
        android:layout_alignEnd="@+id/etInDecimal"
        android:layout_toEndOf="@+id/textView"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:editable="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/etMantissa"
        android:textSize="20dp"
        android:gravity="left|top"
        android:background="#FFFF"
        android:textColor="#000000"
        android:layout_below="@+id/textView8"
        android:layout_alignEnd="@+id/etExpo"
        android:textIsSelectable="false"
        android:layout_marginTop="15dp"
        android:editable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mantissa:"
        android:id="@+id/textView8"
        android:textColor="#FFFF"
        android:textSize="26dp"
        android:layout_below="@+id/etSign"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/etExpo"
        android:background="@drawable/pink" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output:"
        android:id="@+id/textView10"
        android:textSize="26dp"
        android:textColor="#FFFF"
        android:layout_above="@+id/tvOutput2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

</RelativeLayout>

