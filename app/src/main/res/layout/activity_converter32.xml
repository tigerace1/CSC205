<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chengen.converter.Converter32"
    android:background="#006699">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/tvOut"
        android:textSize="20dp"
        android:textColor="#f92c4b"
        android:background="#FFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Binary To Decimal"
        android:id="@+id/btnTwo"
        android:background="#2121fa"
        android:textColor="#FFFF"
        android:textSize="32dp"
        android:layout_below="@+id/etMantissa"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/etMantissa"
        android:textSize="20dp"
        android:textColor="#010101"
        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"
        android:background="#FFFF"
        android:gravity="left|top"
        android:textIsSelectable="false"
        android:editable="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Decimal To Binary"
        android:id="@+id/btnOne"
        android:background="#2121fa"
        android:textColor="#FFFF"
        android:textSize="32dp"
        android:layout_below="@+id/etDec"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign:"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFF"
        android:textSize="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exponent:"
        android:id="@+id/textView3"
        android:textColor="#FFFF"
        android:textSize="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etExpo" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/etSign"
        android:layout_below="@+id/textView2"
        android:textSize="20dp"
        android:textColor="#010101"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:layout_marginTop="15dp"
        android:editable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etExpo"
        android:textSize="20dp"
        android:textColor="#010101"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:textIsSelectable="false"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView4"
        android:editable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mantissa:"
        android:id="@+id/textView4"
        android:layout_below="@+id/etSign"
        android:layout_alignParentStart="true"
        android:textColor="#FFFF"
        android:textSize="26dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDec"
        android:textSize="20dp"
        android:textColor="#010101"
        android:textIsSelectable="false"
        android:layout_below="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:editable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Decimal:"
        android:id="@+id/textView5"
        android:textColor="#FFFF"
        android:textSize="26dp"
        android:layout_below="@+id/btnTwo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/ibRef"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/etExpo"
        android:background="@drawable/capture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Output:"
        android:id="@+id/textView9"
        android:layout_above="@+id/tvOut"
        android:layout_alignParentStart="true"
        android:textSize="26dp"
        android:textColor="#FFFF"
        android:layout_marginBottom="10dp" />

</RelativeLayout>
